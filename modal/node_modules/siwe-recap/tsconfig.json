{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "dist", "src/**/*.test.ts"],
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "target": "ES2015",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist"
  }
}
